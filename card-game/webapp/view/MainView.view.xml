<mvc:View controllerName="cardgame.cardgame.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <!-- Kullanıcı Adı, Zorluk Seçimi ve Buton için Yapı -->
    <VBox class="center-container" justifyContent="Center" alignItems="Center">
        <Input
            id="usernameInput"
            placeholder="Kullanıcı adınızı girin"
            width="300px" />

        <!-- Zorluk Seçimi -->
        <Select id="difficultySelect" width="300px">
            <items>
                <core:Item key="easy" text="Kolay" />
                <core:Item key="medium" text="Orta" />
                <core:Item key="hard" text="Zor" />
            </items>
        </Select>

        <!-- Başla Butonu -->
        <Button id="startButton" text="Başla" width="300px" />
    </VBox>
</mvc:View>