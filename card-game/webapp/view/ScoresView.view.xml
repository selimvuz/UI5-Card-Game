<mvc:View
    controllerName="cardgame.cardgame.controller.ScoresView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="Skor Tablosu" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <Table id="scoreTable" items="{/scores}">
                <columns>
                    <Column hAlign="Center">
                        <Text text="Kullanıcı Adı" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Puan" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Süre" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{username}" textAlign="Center" />
                            <Text text="{score}" textAlign="Center" />
                            <Text text="{time}" textAlign="Center" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Menü" press="onNavBack" />
            </Toolbar>
        </footer>
    </Page>

</mvc:View>